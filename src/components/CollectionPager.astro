---
const baseUrl = import.meta.env.BASE_URL;

const { collectionMap, urlStem } = Astro.props;
---

<ol>
  {
    [...collectionMap.entries()].sort().map(([k]) => (
      <li>
        <a href={`${baseUrl}${urlStem}${k.toLowerCase().replace("/", "_")}/`}>
          {k}
        </a>
      </li>
    ))
  }
</ol>

<style>
  ol {
    align-items: center;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    list-style: none;
    padding: 0;
    width: 100%;
  }

  li {
    padding: 0 0.5em;
  }

  a {
    font-family: var(--font-stack-sans);
    text-decoration: none;
  }
</style>
